{
  "name": "channels",
  "version": "1.0.0",
  "description": "Simple channel-based sound player",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --ignore-path .gitignore --ext .ts .",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": "eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/petervdn/channels.git"
  },
  "author": "Peter van der Noord",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/petervdn/channels/issues"
  },
  "homepage": "https://github.com/petervdn/channels#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.21.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "sample-manager": "^2.1.4"
  }
}
